<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="@color/button_start_color"
                android:endColor="@color/button_end_color"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/button_stroke_color" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <size
                android:height="30dp"
                android:width="30dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="@color/button_start_color"
                android:endColor="@color/button_end_color"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/button_stroke_color" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <size
                android:height="30dp"
                android:width="30dp" />
        </shape>
    </item>

</selector>